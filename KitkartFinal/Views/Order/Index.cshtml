@model Product
@if (Model != null)
{
<form action="buy?id=@Model.ID" method="post">
    <span>Product Id:</span>@Model.ID
    <br />
    
    <br /><span>ProductName:</span>@Model.ProductName
    <br /><span>ProductImage:</span><img src="@Model.ProductImage" alt="Stickman" width="400" height="400" />
    <br />
    <br /><span>Total Stock:</span>@Model.AvailableQty
    <br />
    @if (Model.AvailableQty > 0)
    {
<button type="submit">Buy</button> }
    else
    {
        <div>Out Of Stock</div>}



</form> 
}
else
{
<h2>Thanks For shopping</h2>
<a asp-controller="Home" asp-action="Index">Back to List</a>

}
